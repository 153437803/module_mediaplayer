<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteBg"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <lib.kalu.mediaplayer.videoui.player.VideoLayout
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <Button
            android:id="@+id/btn_scale_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="正常的" />

        <Button
            android:id="@+id/btn_scale_169"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="16:9" />

        <Button
            android:id="@+id/btn_scale_43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="4:3" />

        <Button
            android:id="@+id/btn_scale_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="充满整个控件" />

        <Button
            android:id="@+id/btn_scale_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="原始类型" />

        <Button
            android:id="@+id/btn_scale_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="剧中裁剪类型" />

        <Button
            android:id="@+id/btn_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="视频截图" />

        <Button
            android:id="@+id/btn_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="视频截图gif" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>