<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="lib.kalu.mediaplayer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!--监听网络状态变化需要的权限-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:allowBackup="false"
        android:supportsRtl="true">

        <receiver android:name="lib.kalu.mediaplayer.videoui.old.other.BatterReceiver" />
        <receiver android:name="lib.kalu.mediaplayer.videoui.old.other.NetChangedReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service android:name="lib.kalu.mediaplayer.musickernel.service.PlayService" />

        <receiver android:name="lib.kalu.mediaplayer.musickernel.receiver.NotificationStatusBarReceiver">
            <intent-filter>
                <action android:name="lib.kalu.status_bar" />
            </intent-filter>
        </receiver>
        <receiver android:name="lib.kalu.mediaplayer.musickernel.receiver.EarphoneControlReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver android:name="lib.kalu.mediaplayer.musickernel.receiver.AudioBroadcastReceiver">
            <intent-filter>
                <action android:name="lib.kalu.lock" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
