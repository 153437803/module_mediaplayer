<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/module_mediaplayer_component_loading_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="100dp"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:longClickable="false">

    <!-- 转圈 -->
    <lib.kalu.mediaplayer.widget.MediaProgressBar
        android:id="@+id/module_mediaplayer_component_loading_pb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateDuration="2000"
        android:visibility="gone"
        app:mpb_color_round="#ffa7a7a7"
        app:mpb_count="8"
        app:mpb_radius="10dp"
        app:mpb_rate="0.9" />

    <!-- 提示 -->
    <TextView
        android:id="@+id/module_mediaplayer_component_loading_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/module_mediaplayer_component_loading_pb"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/module_mediaplayer_color_ffffff"
        android:textSize="14sp"
        android:visibility="gone" />

</RelativeLayout>
