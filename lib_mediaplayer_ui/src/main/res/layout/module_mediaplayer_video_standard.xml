<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <ImageView
        android:id="@+id/module_mediaplayer_controller_center_lock"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center|start"
        android:background="@drawable/module_mediaplayer_selector_background"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="4dp"
        android:src="@drawable/module_mediaplayer_selector_lock_button"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/module_mediaplayer_controller_center_loading"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/module_mediaplayer_pb_loading_ring"
        android:indeterminateDuration="2000"
        android:visibility="invisible" />

</FrameLayout>