<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/module_mediaplayer_controller_prepare_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:scaleType="centerCrop"
        android:src="@null"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/module_mediaplayer_controller_prepare_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/module_mediaplayer_selector_play_button"
        android:visibility="invisible" />

    <Space
        android:id="@+id/module_mediaplayer_controller_prepare_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <!-- 转圈 -->
    <lib.kalu.mediaplayer.widget.MediaProgressBar
        android:id="@+id/module_mediaplayer_controller_prepare_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/module_mediaplayer_controller_prepare_center"
        android:layout_centerHorizontal="true"
        android:indeterminateDuration="2000"
        android:visibility="invisible" />

    <!-- 提示 -->
    <TextView
        android:id="@+id/module_mediaplayer_controller_prepare_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/module_mediaplayer_controller_prepare_center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/module_mediaplayer_color_ffffff"
        android:textSize="14sp"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/fl_net_warning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/module_mediaplayer_string_net_wifi_tip"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/module_mediaplayer_shape_status_view_bg"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:text="@string/module_mediaplayer_string_continue_play"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>